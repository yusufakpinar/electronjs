{
  "name": "electron-sunum",
  "version": "1.0.0",
  "description": "Electron ile uygulama geliştirme",
  "main": "src/main.js",
  "build": {
    "appId": "$npm_package_name",
    "files": [
      "**/*",
      "!releases"
    ],
    "icon": "src/img/icon.icns"
  },
  "scripts": {
    "start": "npm run build:web && electron src/main.js",
    "dev": "concurrently --kill-others \"npm run build:web\" \"electron src/main.js\"",
    "electron": "electron .",
    "web": "webpack-dev-server",
    "build:electron": "rm -rf release-builds && npm run package-mac",
    "build:web": "webpack --config webpack.config.js --watch",
    "test": "babel-node test.js",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=src/img/icon.icns --prune=true --out=dist-electron --asar"
  },
  "keywords": [
    "electron",
    "react",
    "babel",
    "webpack"
  ],
  "author": "Yusuf Akpınar",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "concurrently": "^3.5.1",
    "copy-webpack-plugin": "^4.3.1",
    "css-loader": "^0.28.8",
    "electron": "^1.7.9",
    "electron-devtools-installer": "^2.2.3",
    "electron-hot-loader": "^0.8.0",
    "electron-packager": "^9.1.0",
    "electron-reload": "^1.2.2",
    "event-source-polyfill": "0.0.12",
    "file-loader": "^1.1.6",
    "html-webpack-plugin": "^2.30.1",
    "node-sass": "^4.7.2",
    "react-hot-loader": "^3.0.0-beta.6",
    "react-router-dom": "^4.2.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.1",
    "url-loader": "^0.6.2",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.9.7",
    "webpack-hot-middleware": "^2.21.0"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "normalize.css": "^7.0.0",
    "prismjs": "^1.9.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router": "^4.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yusufakpinar/electronjs.git"
  }
}
